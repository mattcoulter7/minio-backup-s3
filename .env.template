# ---------------- SOURCE (MinIO example) ----------------
SRC_PROVIDER=Minio
SRC_ENDPOINT=http://minio:9000
SRC_ACCESS_KEY=minio
SRC_SECRET_KEY=miniosecret
SRC_REGION=us-east-1
SRC_FORCE_PATH_STYLE=true
SRC_INSECURE_TLS=false

# Optional: restrict buckets (space/newline separated). Empty = auto-discover
SRC_BUCKETS=

# ---------------- DESTINATION (fill one provider) ----------------
# AWS S3 example:
# DEST_PROVIDER=AWS
# DEST_ENDPOINT=https://s3.ap-southeast-2.amazonaws.com
# DEST_REGION=ap-southeast-2
# DEST_FORCE_PATH_STYLE=false

# Cloudflare R2 example:
# DEST_PROVIDER=Cloudflare
# DEST_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
# DEST_REGION=auto
# DEST_FORCE_PATH_STYLE=true

# Wasabi example:
# DEST_PROVIDER=Other
# DEST_ENDPOINT=https://s3.ap-southeast-2.wasabisys.com
# DEST_REGION=ap-southeast-2
# DEST_FORCE_PATH_STYLE=true

# Backblaze B2 S3 example:
# DEST_PROVIDER=Other
# DEST_ENDPOINT=https://s3.<region>.backblazeb2.com
# DEST_REGION=<region>
# DEST_FORCE_PATH_STYLE=true

# DigitalOcean Spaces example:
# DEST_PROVIDER=Other
# DEST_ENDPOINT=https://sfo3.digitaloceanspaces.com
# DEST_REGION=sfo3
# DEST_FORCE_PATH_STYLE=true

# IDrive e2 example:
# DEST_PROVIDER=Other
# DEST_ENDPOINT=https://<region>.idrivee2-<n>.com
# DEST_REGION=<region>
# DEST_FORCE_PATH_STYLE=true

DEST_PROVIDER=Other
DEST_ENDPOINT=
DEST_ACCESS_KEY=
DEST_SECRET_KEY=
DEST_REGION=us-east-1
DEST_FORCE_PATH_STYLE=true
DEST_INSECURE_TLS=false

DEST_BUCKET=your-bucket
DEST_PREFIX=minio

# ---------------- SYNC BEHAVIOUR ----------------
REMOVE=yes
DRY_RUN=no
TRANSFERS=16
CHECKERS=16

# ---------------- SCHEDULING ----------------
SCHEDULE=0 * * * *